<?import javafx.geometry.Insets?>

<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <TextField fx:id="textField" GridPane.rowIndex="2" GridPane.columnIndex="0" />

    <Button fx:id="windows" onAction="#onButtonTapped" text="Windows" GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <Button fx:id="macOS" onAction="#onButtonTapped" text="MacOS" GridPane.rowIndex="0" GridPane.columnIndex="1" />
    <Button fx:id="linux" onAction="#onButtonTapped" text="Linux" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <Button fx:id="android" onAction="#onButtonTapped" text="Android" GridPane.rowIndex="1" GridPane.columnIndex="1" />

</GridPane>